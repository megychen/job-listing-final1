<div class="col-md-12 col-lg-10 col-lg-offset-1">
  <hr>
  <div class="pull-right">
    <%= link_to("Add a Job", new_admin_job_path, :class => "btn btn-primary btn-sm") %>
  </div>
  <br><br>
  <table class="table table-boldered">
    <thead>
      <tr>
        <td>Title</td>
        <td>Resume Count</td>
        <td>Lower Salary</td>
        <td>Upper Salary</td>
        <td>Manage</td>
        <td>Publish Time</td>
        <td>Category</td>
        <td>Company</td>
        <td>City</td>
      </tr>
    </thead>
    <% @jobs.each do |job| %>
      <tr>
        <td>
          <%= render_job_status(job) %>
          <%= link_to(job.title, admin_job_path(job)) %>
        </td>
        <td>
          <%= link_to(job.resumes.count, admin_job_resumes_path(job)) %>
        </td>
        <td>
          <%= job.wage_lower_bound %>
        </td>
        <td>
          <%= job.wage_upper_bound %>
        </td>
        <td>
          <%= link_to("Edit", edit_admin_job_path(job)) %> |
          <%= link_to("Destroy", admin_job_path(job), :method => :delete, :data => { :confirm => "Are you sure?" }) %> |
          <% if job.is_hidden %>
            <%= link_to("Publish", publish_admin_job_path(job), method: :post) %>
          <% else %>
            <%= link_to("Hide", hide_admin_job_path(job), method: :post) %>
          <% end %>
        </td>
        <td>
          <%= time_ago_in_words(job.created_at) %> ago
        </td>
        <td><%= job.category %></td>
        <td><%= job.company %></td>
        <td><%= job.city %></td>
      </tr>
    <% end %>
  </table>
</div>
